    <title>{% block title %}Online advertising{% endblock %}</title>

    <!-- Bootstrap Core CSS -->
    <link href="{{ asset ('frontEndTemplate/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="{{ asset ('frontEndTemplate/css/freelancer.min.css') }}" rel="stylesheet">

    <!-- Custom Fonts -->
