{% extends 'base.html.twig' %}
{% block title %}Show book{% endblock %}
{% block body %}
    <div class="row">
            <ol class="breadcrumb">
                <li><a href="{{ path('annonce_books_dashboard')}}"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
                <li class="active">show book section</li>
            </ol>
        </div><!--/.row-->

    <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"> show book</h1>
            </div>
        </div><!--/.row-->

    <table class="table table-hover table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ book.description }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ book.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><div class="col-sm-4 col-lg-4 col-md-4">
                        <div class="thumbnail">
                           <img src="{{ asset('uploads/books/'~book.path) }}" alt="">
                            <!--<img src="http://download.seaicons.com/download/i27143/ph03nyx/super-mario/ph03nyx-super-mario-mushroom-mini.ico" alt="">-->
                        </div>
                    </div></td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_books_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('annonce_books_edit', { 'id': book.id }) }}">Edit</a>
        </li>
        
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
